doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    base(href="/")
    title Website title
    meta(name="description" content="Website decription")

    //- Icons (favicons, app icons, etc... Use https://realfavicongenerator.net/ to generate all the icons)
    link(rel="apple-touch-icon" sizes="180x180" href="/apple-touch-icon.png")
    link(rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png")
    link(rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png")
    link(rel="manifest" href="/site.webmanifest")
    link(rel="mask-icon" href="/safari-pinned-tab.svg" color="#ff3a00")
    meta(name="msapplication-TileColor" content="#f4d8cc")
    meta(name="theme-color" content="#f4d8cc")

    //- Meta information for stuff like facebook and twitter
    meta(property="og:type" content="website")
    meta(property="og:title" content="Website title")
    meta(property="og:description" content="Website description")
    meta(property="og:image" content="Image URL")

    meta(name="twitter:card" content="summary_large_image")
    meta(name="twitter:title" content="Website title")
    meta(name="twitter:description" content="Website description")
    meta(name="twitter:image" content="Image URL")

    //- Stuff for improve lighthouse
    link(rel="preconnect" href="https://wwww.google-analytics.com")
    link(rel="preconnect" href="https://fonts.gstatic.com")

    link(rel="preload" as="style" href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap")
    link(rel="stylesheet" media="print" onload="this.onload=null;this.removeAttribute('media');" href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap")

    noscript
      link(rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@500&display=swap")

    link(href="main.css" rel="stylesheet")
  body
    h1 Hello hello hellooo

    //- Including a partial
    include ./partials/preloader.example

